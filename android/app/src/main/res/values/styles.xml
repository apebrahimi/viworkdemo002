<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ViWorks UI System v1 - Base Theme -->
    <style name="Theme.ViWorks" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- RTL Support -->
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:textAlignment">viewStart</item>
        
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/success</item>
        <item name="colorSecondaryVariant">@color/success</item>
        <item name="colorOnSecondary">@color/on_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_strong</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_strong</item>
        <item name="android:textColorSecondary">@color/text_muted</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
    </style>
    
    <!-- Typography System -->
    <style name="TextAppearance.ViWorks.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_strong</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.ViWorks.Section" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_strong</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.ViWorks.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_strong</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.ViWorks.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Component Styles -->
    <style name="ViWorksCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <style name="ViWorksButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ViWorksButton.Primary" parent="ViWorksButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <style name="ViWorksButton.Secondary" parent="ViWorksButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/text_strong</item>
    </style>
    
    <style name="ViWorksButton.Destructive" parent="ViWorksButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/error</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/error</item>
    </style>
    
    <style name="ViWorksInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/input_focused</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_muted</item>
        <item name="android:textColor">@color/text_strong</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- OTP Field Style -->
    <style name="ViWorksOTPField">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/text_strong</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/otp_field_background</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <!-- Status Chip Styles -->
    <style name="ViWorksChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:minHeight">24dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="ViWorksChip.Success" parent="ViWorksChip">
        <item name="chipBackgroundColor">@color/success</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <style name="ViWorksChip.Warning" parent="ViWorksChip">
        <item name="chipBackgroundColor">@color/warning</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <style name="ViWorksChip.Error" parent="ViWorksChip">
        <item name="chipBackgroundColor">@color/error</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
    
    <style name="ViWorksChip.Info" parent="ViWorksChip">
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="strokeColor">@color/info</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/info</item>
    </style>
</resources>
