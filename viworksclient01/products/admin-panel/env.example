# ViWorkS Admin Panel - Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://admin:secure_password_dev@postgres:5432/viworks_admin"

# PostgreSQL Password (for Docker Compose)
POSTGRES_PASSWORD="secure_password_dev"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Cache URL
# Format: redis://host:port or redis://username:password@host:port
REDIS_URL="redis://redis:6379"

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Node Environment
NODE_ENV="production"

# Admin Panel URL
ADMIN_PANEL_URL="http://localhost:3000"

# CORS Origin (for API access)
CORS_ORIGIN="http://localhost:3000"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# bcrypt Rounds for Password Hashing
BCRYPT_ROUNDS="12"

# Rate Limiting
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds
RATE_LIMIT_MAX="100"        # Max requests per window

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log Level (error, warn, info, debug)
LOG_LEVEL="info"

# Log File Path
LOG_FILE="logs/app.log"

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP Configuration for notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend
NEXT_PUBLIC_API_URL="http://localhost:8081"

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL="ws://localhost:8081"

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
# pgAdmin Email
PGADMIN_EMAIL="admin@viworks.com"

# pgAdmin Password
PGADMIN_PASSWORD="admin123"

# =============================================================================
# CLOUD DEPLOYMENT CONFIGURATION
# =============================================================================
# AWS Configuration (for ECS deployment)
AWS_REGION="us-east-1"
AWS_ACCOUNT_ID=""

# Google Cloud Configuration (for Cloud Run deployment)
GCP_PROJECT_ID=""
GCP_REGION="us-central1"

# Azure Configuration (for Container Instances deployment)
AZURE_RESOURCE_GROUP="viworks-admin-rg"
AZURE_LOCATION="eastus"

# DigitalOcean Configuration (for App Platform deployment)
DO_REGION="nyc1"

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Sentry DSN (for error tracking)
SENTRY_DSN=""

# Prometheus Metrics (enable/disable)
ENABLE_METRICS="true"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable MFA for all users
ENABLE_MFA="true"

# Enable audit logging
ENABLE_AUDIT_LOGGING="true"

# Enable real-time notifications
ENABLE_REALTIME_NOTIFICATIONS="true"

# Enable file uploads
ENABLE_FILE_UPLOADS="true"

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Database connection pool size
DB_POOL_SIZE="10"

# Redis connection pool size
REDIS_POOL_SIZE="5"

# API timeout (in milliseconds)
API_TIMEOUT="30000"

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Enable automatic backups
ENABLE_AUTO_BACKUP="true"

# Backup retention days
BACKUP_RETENTION_DAYS="30"

# Backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
